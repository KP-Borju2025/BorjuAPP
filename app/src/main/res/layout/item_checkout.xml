<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="16dp"
    android:paddingVertical="10dp">

    <TextView
        android:id="@+id/tv_checkout_item_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tv_checkout_item_name"
        android:textStyle="bold"
        tools:text="1x" />

    <TextView
        android:id="@+id/tv_checkout_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/tv_checkout_item_quantity"
        android:layout_marginStart="16dp"
        android:textStyle="bold"
        android:layout_toStartOf="@+id/tv_checkout_item_total_price"
        tools:text="Nama Makanan" />

    <!-- TextView untuk menampilkan catatan -->
    <TextView
        android:id="@+id/tv_checkout_item_note"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_checkout_item_name"
        android:layout_alignStart="@id/tv_checkout_item_name"
        android:layout_toStartOf="@id/tv_checkout_item_total_price"
        android:layout_marginTop="4dp"
        android:textSize="12sp"
        android:textStyle="italic"
        android:visibility="gone" 
        tools:visibility="visible"
        tools:text="Catatan: jangan pakai bawang, saus dipisah ya" />

    <TextView
        android:id="@+id/tv_checkout_item_total_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        tools:text="Rp 25.000" />

</RelativeLayout>